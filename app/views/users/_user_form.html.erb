<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "Error") %> Sign up data error. Sign up failed:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="artist_form">
    <%= label :is_artist, "Are you an artist?" %>
    <input id="artist_checkbox" type="checkbox" name="is_artist" unchecked>
  </div>

  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :firstname, "Firstname" %><br>
    <%= f.text_field :firstname %>
  </div>
  <div>
    <%= f.label :lastname, "Lastname" %><br>
    <%= f.text_field :lastname %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div id="artist_signup">
    <div>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>
<br>